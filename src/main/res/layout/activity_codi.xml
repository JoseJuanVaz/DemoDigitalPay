<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Codi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicación para consultar datos necesarios para los servicios CODI" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tu # Telefonico" />

            <EditText
                android:id="@+id/editTxt_NumeroCel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:text="5543599472" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:text="id Hardware:" />

            <EditText
                android:id="@+id/editTxt_AndroidId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Android_Id" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Id:" />

            <EditText
                android:id="@+id/editTxt_AppId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="AppId" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="idHardware-AppId:" />

            <EditText
                android:id="@+id/editTxt_ANDROID_ID_AppId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="ANDROID_ID-AppId" />

            <Button
                android:id="@+id/bttn_RegistroDispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro Dispositivo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa OTP (codR):" />

            <EditText
                android:id="@+id/editTxt_OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="OTP" />

            <Button
                android:id="@+id/bttn_GenerarKeySource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generar keySource" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="keySource:" />

            <EditText
                android:id="@+id/editTxt_Keysource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Keysource" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cGoogleID:" />

            <EditText
                android:id="@+id/editTxt_IdGoogle_Firebase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="cGoogleID" />

            <Button
                android:id="@+id/bttn_DecryptCgoogleID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desencriptar cGoogleID" />

            <EditText
                android:id="@+id/editTxt_DecryptCgoogleID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="cGoogleID Desencriptado" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digito Verificador: (3 digitos con ceros a la izq)" />

            <EditText
                android:id="@+id/editTxt_DigVerif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Digito Verificador" />

            <Button
                android:id="@+id/bttn_RegFirebase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar en Firebase" />

            <TextView
                android:id="@+id/txtVw_HmacRegSubsDisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqui se mostrará el HMAC generado para el Registro Subsecuente del Dispositivo" />

            <Button
                android:id="@+id/bttn_RegSubsecuenteDisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro Subsecuente de Dispositivos" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultado Registro Subsecuente:" />

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>